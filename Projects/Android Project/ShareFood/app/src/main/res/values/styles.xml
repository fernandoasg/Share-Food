<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/amareloPrincipal</item>
        <item name="colorPrimaryDark">@color/amareloSecundario</item>
        <item name="colorAccent">@color/cinza</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/amareloPrincipal</item>
        <item name="colorPrimaryDark">@color/amareloSecundario</item>
        <item name="colorAccent">@color/cinza</item>
    </style>

    <style name="RegisterTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorTransparent</item>
        <item name="colorPrimaryDark">@color/amareloSecundario</item>
        <item name="colorAccent">@color/cinza</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
    </style>

</resources>
