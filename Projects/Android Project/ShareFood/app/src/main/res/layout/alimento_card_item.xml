<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardBackgroundColor="@color/colorAlmostWhite"
    android:layout_marginTop="8dp"
    app:strokeColor="@color/cardview_dark_background"
    app:strokeWidth="0.5dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/food_post_image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_launcher_background"/>
        <TextView
            android:id="@+id/food_post_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:layout_marginLeft="8dp"
            android:textSize="8pt"
            android:layout_toEndOf="@+id/food_post_image"
            android:layout_toRightOf="@+id/food_post_image"/>
        <TextView
            android:id="@+id/food_post_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:autoSizeTextType="uniform"
            android:text="Descrição com pontosponto pont ospont ospontosponto spontospontos no final..."
            android:layout_below="@+id/food_post_title"
            android:layout_toEndOf="@+id/food_post_image"
            android:layout_toRightOf="@+id/food_post_image"/>
        <TextView
            android:id="@+id/food_post_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100m"
            android:layout_toEndOf="@+id/food_post_title"
            android:layout_toRightOf="@+id/food_post_title"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="end"/>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>