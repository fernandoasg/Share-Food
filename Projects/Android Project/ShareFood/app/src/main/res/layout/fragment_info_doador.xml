<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/general_box">
    <TextView
        android:id="@+id/radio_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Você é uma pessoa:"
        android:textColor="@color/cinza"
        android:textSize="9pt"/>

    <RadioGroup
        android:id="@+id/doador_type_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radio_title_text"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/fisica_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/cinza"
            android:textColor="@color/cinza"
            android:checked="true"
            android:textSize="9pt"
            android:text="Física" />

        <RadioButton
            android:id="@+id/juridica_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:buttonTint="@color/cinza"
            android:textColor="@color/cinza"
            android:textSize="9pt"
            android:text="Jurídica" />
    </RadioGroup>


    <EditText
        android:id="@+id/cpf_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/edit_text_no_color"
        android:drawablePadding="10dp"
        android:hint="CPF"
        android:inputType="numberDecimal"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorAlmostWhite"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/cnpj2_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/edit_text_no_color"
        android:drawablePadding="10dp"
        android:hint="CNPJ"
        android:visibility="gone"
        android:inputType="numberDecimal"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorAlmostWhite"
        android:textSize="10pt" />

    <EditText
        android:id="@+id/phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/edit_text_no_color"
        android:drawablePadding="10dp"
        android:hint="Telefone"
        android:inputType="numberDecimal"
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorAlmostWhite"
        android:textSize="10pt" />

    <Button
        android:id="@+id/save_info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_green_style"
        android:layout_gravity="center"
        android:paddingLeft="36dp"
        android:paddingTop="8dp"
        android:paddingRight="36dp"
        android:paddingBottom="8dp"
        android:text="SALVAR"
        android:textColor="@color/colorWhite"
        android:textSize="14pt" />
</LinearLayout>