<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:layout_marginTop="8dp"
    app:strokeColor="@color/cardview_dark_background"
    app:strokeWidth="0.5dp"
    app:cardElevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <ImageView
            android:id="@+id/option_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_launcher_background" />
        <TextView
            android:id="@+id/option_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Produto"
            android:layout_marginLeft="8dp"
            android:textSize="8pt"
            android:layout_toEndOf="@+id/option_image"
            android:layout_toRightOf="@+id/option_image"/>
        <TextView
            android:id="@+id/option_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:autoSizeTextType="uniform"
            android:layout_below="@+id/option_name_text"
            android:layout_toEndOf="@+id/option_image"
            android:layout_toRightOf="@+id/option_image"/>
        <ImageButton
            android:id="@+id/option_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black_48dp"
            android:background="@color/colorTransparent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>