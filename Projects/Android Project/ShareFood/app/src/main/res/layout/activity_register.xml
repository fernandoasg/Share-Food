<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorRed"
    tools:context=".activity.RegisterActivity">

    <ImageView
        android:id="@+id/app_icon_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_share_food_image" />

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_centerHorizontal="true"
        android:text="Share Food"
        android:textColor="@color/colorWhite"
        android:textSize="21pt"
        android:layout_below="@id/app_icon_image"/>

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/colorWhite"
        android:drawableLeft="@drawable/ic_name_edit_text"
        android:drawablePadding="10dp"
        android:hint="nome"
        android:inputType="textPersonName"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorAlmostWhite"
        android:textSize="10pt"
        android:layout_below="@id/app_name_text"/>

    <EditText
        android:id="@+id/email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/colorWhite"
        android:drawableLeft="@drawable/ic_email_edit_text"
        android:drawablePadding="10dp"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorAlmostWhite"
        android:textSize="10pt"
        android:layout_below="@id/name_edit_text"/>

    <EditText
        android:id="@+id/phone_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/colorWhite"
        android:drawableLeft="@drawable/ic_phone_edit_text"
        android:drawablePadding="10dp"
        android:hint="celular"
        android:inputType="textPhonetic"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorAlmostWhite"
        android:textSize="10pt"
        android:layout_below="@id/email_edit_text"/>


    <EditText
        android:id="@+id/password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="@color/colorWhite"
        android:drawableLeft="@drawable/ic_password_edit_text"
        android:drawablePadding="10dp"
        android:hint="senha"
        android:inputType="textPassword"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorAlmostWhite"
        android:textSize="10pt"
        android:layout_below="@id/phone_edit_text"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@color/colorWhite"
        android:paddingLeft="24dp"
        android:paddingTop="8dp"
        android:paddingRight="24dp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="8dp"
        android:text="CADASTRAR"
        android:textColor="@color/colorRed"
        android:textSize="14pt"
        android:layout_below="@id/password_edit_text"/>
</RelativeLayout>