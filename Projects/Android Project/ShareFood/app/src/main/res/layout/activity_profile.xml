<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    tools:context=".activity.ProfileActivity">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginTop="8dp"
        app:strokeColor="@color/cardview_dark_background"
        app:strokeWidth="0.5dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <ImageView
                android:id="@+id/user_profile_change_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_person_black_24dp" />
            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Usuário"
                android:layout_marginLeft="8dp"
                android:textSize="8pt"
                android:layout_toEndOf="@+id/user_profile_change_image"
                android:layout_toRightOf="@+id/user_profile_change_image"/>
            <TextView
                android:id="@+id/user_email_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:autoSizeTextType="uniform"
                android:text="email@gmail.com"
                android:layout_below="@+id/user_profile_name"
                android:layout_toEndOf="@+id/user_profile_change_image"
                android:layout_toRightOf="@+id/user_profile_change_image"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_marginTop="8dp"
        app:strokeWidth="0.5dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="8pt"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:text="Endereço"/>
            <EditText
                android:id="@+id/zip_code_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_no_color"
                android:hint="CEP"
                android:inputType="numberDecimal"
                android:textColorHint="@color/colorAlmostWhite"
                android:textSize="9pt"/>
            <EditText
                android:id="@+id/city_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_no_color"
                android:hint="Cidade"
                android:inputType="text"
                android:textColorHint="@color/colorAlmostWhite"
                android:textSize="9pt"/>

            <EditText
                android:id="@+id/street_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_no_color"
                android:hint="Logradouro"
                android:inputType="text"
                android:textColorHint="@color/colorAlmostWhite"
                android:textSize="9pt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/number_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edit_text_no_color"
                    android:hint="Número"
                    android:inputType="number"
                    android:layout_weight="1"
                    android:textColorHint="@color/colorAlmostWhite"
                    android:textSize="9pt"/>

                <EditText
                    android:id="@+id/state_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edit_text_no_color"
                    android:hint="Estado"
                    android:layout_weight="1"
                    android:inputType="text"
                    android:textColorHint="@color/colorAlmostWhite"
                    android:textSize="9pt"/>
            </LinearLayout>
            <EditText
                android:id="@+id/complement_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edit_text_no_color"
                android:hint="Complemento"
                android:inputType="textCapSentences|textMultiLine"
                android:textColor="@color/colorBlack"
                android:maxLength="2000"
                android:maxLines="4"
                android:textColorHint="@color/colorAlmostWhite"
                android:textSize="9pt" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    <Button
        android:id="@+id/save_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_edit_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_green_style"
        android:layout_gravity="center"
        android:paddingLeft="36dp"
        android:paddingTop="8dp"
        android:paddingRight="36dp"
        android:paddingBottom="8dp"
        android:text="SALVAR"
        android:textColor="@color/colorWhite"
        android:textSize="13pt" />
</LinearLayout>